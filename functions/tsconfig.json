{
    "compilerOptions": {
      "lib": ["ES2022"],
      "target": "ES2022",
      "module": "CommonJS",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["node"]
    },
    "exclude": ["node_modules"]
  }